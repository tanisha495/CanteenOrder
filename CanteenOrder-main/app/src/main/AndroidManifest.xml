<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.canteen">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/burger"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Canteen">

        <!-- Cart Activity -->
        <activity
            android:name=".CartActivity"
            android:exported="false" />

        <!-- Customer Details Activity -->
        <activity
            android:name=".CustomerDetailsActivity"
            android:exported="false" />

        <!-- Order Summary Activity -->
        <activity
            android:name=".OrderSummaryActivity"
            android:exported="false" />

        <!-- Menu Activity -->
        <activity
            android:name=".ui.theme.MenuActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Register" />

        <!-- Login Activity (Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
